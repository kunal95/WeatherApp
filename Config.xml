<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.kunal.weatherapp"
        version     = "2.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>WeatherApp</name>

    <description>
       A basic HTML5 based weather app.
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
       Kunal Sachdeva
    </author>
        <!-- Customize your app and platform with the preference element. -->
    <preference name="phonegap-version"           value="2.9.0" />          <!-- all: current version of PhoneGap -->
         <!-- android: app install location. 'auto' will choose. 'internalOnly' is device memory. 'preferExternal' is SDCard. -->
<icon src="icon.png" />
  <icon src="icon.png" gap:platform="android" gap:density="ldpi" />
<icon src="icon.png" gap:platform="android" gap:density="mdpi" />
<icon src="icon.png" gap:platform="android" gap:density="hdpi" />
<icon src="icon.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="splash.png" />
</widget>
